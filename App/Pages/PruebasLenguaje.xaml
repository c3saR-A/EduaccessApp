<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Pages.PruebasLenguaje"
             >
    <VerticalStackLayout>
        <HorizontalStackLayout
            Background="#ffde59"
            HeightRequest="65" 
            Spacing="50"
            >
            <ImageButton Source="backicon.png"
                HorizontalOptions="Start"
                HeightRequest="35"
                WidthRequest="70"
                Clicked="BackPage"
                />
            <Label Text="Ejercicios"
                TextColor="White"
                FontSize="35"
                FontAttributes="Bold"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                />
        </HorizontalStackLayout>

        <VerticalStackLayout Spacing="60" >
            <StackLayout x:Name="PickerstackLayout" Padding="20" VerticalOptions="CenterAndExpand">

            </StackLayout>
            <Button
                Text="Continuar"
                TextColor="white"
                FontSize="20"
                Grid.Row="4"
                WidthRequest="300"
                FontAttributes="Bold"
                BackgroundColor="#ffde59"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>